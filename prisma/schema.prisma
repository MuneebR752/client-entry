// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Client {
  id                   String   @id @default(uuid())
  name                 String
  dob                  String
  email                String   @unique
  phone                String   @unique
  address              String
  city                 String?
  streetNo             String
  suiteNo              String
  postalCode           String
  statusInCanada       String   @default("Citizen")
  arrivalDate          String?
  height               String
  weight               String
  yearsInCanada        String
  birthCountry         String
  maritalStatus        String   @default("Single")
  spouseName           String?
  spouseDob            String?
  noOfChildren         Int?
  noOfMaleChildren     String?
  noOfFemaleChildren   String?
  noOfInfantChildren   String?
  childNames           String[] @default([])
  childDobs            String[] @default([])
  workStatus           String   @default("Employed")
  occupation           String
  jobResponsibilities  String
  employerName         String
  employerAddress      String
  employerCity         String
  employerStreetNo     String
  employerSuiteNo      String
  employerPostalCode   String
  annualIncome         String
  smokingStatus        String   @default("Non-Smoker")
  drinkingStatus       String   @default("Non-Drinker")
  drinkType            String?
  drinksPerDay         String?
  anyMedication        String   @default("No")
  whichMedication      String?
  familyDoctor         String
  clinicAddress        String
  clinicCity           String
  clinicStreetNo       String
  clinicSuiteNo        String
  clinicPostalCode     String
  doctorLastVisit      String
  reasonForLastVisit   String
  anyFamilyHistory     String
  anyHealthIssues      String
  dangerousSports      String
  replacingOldPolicy   String
  anyLicenceSuspension String
  faceAmount           String
  beneficiary1         String
  beneficiary2         String
  assets               String
  liabilities          String
  bankNumber           String
  transitNumber        String
  accountNumber        String
  signature            String
  createdAt            DateTime @default(now())
}
